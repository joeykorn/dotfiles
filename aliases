#!/usr/bin/env bash

# use colors in output
alias ls='ls --color=auto'
alias grep='grep --color'

# list files
alias l='ls -lFh'     
alias la='ls -lAFh'   
alias ll='ls -l'      

# nvim
alias vi='$EDITOR'
alias vim='$EDITOR'

# trash
alias rm='trash'

# prevent overwriting
alias cp='cp -i'
alias mv='mv -i'

# homebrew
alias brewu='brew update && brew upgrade && brew cleanup && brew doctor'
